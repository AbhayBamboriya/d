<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md ">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800"> Login </h1>
      <div>
      <!-- Error Message Block -->
      <%- include('../partials/error') %>

<% if (loginMessage !== '') { %>
  <div id="logout-popup" class="fixed top-5 right-5 bg-red-500 text-white px-6 py-4 rounded-lg shadow-lg z-50 animate-fade-in-down font-bold">
    <strong class="font-bold">Logged Out from the account !</strong>
  </div>

  <script>
    setTimeout(() => {
      const popup = document.getElementById('logout-popup');
      if (popup) popup.remove();
    }, 3000); // Auto-close after 3 seconds
  </script>

  <style>
    @keyframes fade-in-down {
      from { opacity: 0; transform: translateY(-10px); }
      to   { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in-down {
      animation: fade-in-down 0.4s ease-out;
    }
  </style>
<% } %>

      <form action="/login " method="POST" class="max-w-md mx-auto">
        <input
          type="email"
          name="email"
          placeholder="Enter Your Email"
          value="<%= oldInput.email %>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          required/> <!--required is used to enter this value compulsorily-->
         
          <input
          type="password"
          name="password"
          placeholder="Enter Your password"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          required/>

        <input type="submit" value="Login" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
      </form>
      </div>
    </main>
  </body>
</html>
